<div class="bio-card"
    {% if max_heights %}data-max-heights="{{ max_heights }}"{% endif%}
    {% if min_widths %}data-min-widths="{{ min_widths }}"{% endif%}
>
    <img class="bio-image" src="./images/headshots/{{ image }}" alt="Picture of {{ name }}">
    <div class="bio-content">
        <div>
            <a href="{{ linkedin }}">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="{{ bio }}">
                <span>BIO</span>
            </a>
        </div>
        <p>
            <span>{{ name }}</span>,
            <span>{{ credentials }}</span><br />
            <span>{{ role }}</span>
        </p>
    </div>
</div>
