<div class="bio-card" data-match-heights="{{ match_heights }}">
    <img class="bio-image" src="./images/headshots/{{ image }}" alt="Picture of {{ name }}">
    <div class="bio-content">
        <div>
            <a href="{{ linkedin }}">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="{{ bio }}">
                <span>BIO</span>
            </a>
        </div>
        <p>
            <span>{{ name }}</span>,
            <span>{{ credentials }}</span><br />
            <span>{{ role }}</span>
        </p>
    </div>
</div>
